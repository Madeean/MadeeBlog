<%- include ('../dashboard_partials/header') %>

<div class="p-10">
    <div class="card h-full bg-base-100 shadow-xl">
		<div class="card-body">
            <div>
                <img src="/uploads/<%=artikel.thumbnail%>" alt="" class="block ml-auto mr-auto">
                <div class="mt-8">
                    <h1 class="text-center"><%=artikel.judul%></h1>
                    <h1>Created at= <%=moment(artikel.createdAt).format('hh:mm a DD MMM YYYY')%></h1>
                    <h1>Category: <button class="badge badge-accent"><%=artikel.category?.name%></button></h1>
                    <h1>like= <%=artikel.like%></h1>
                    <h1>views = <%=artikel.views%></h1>
                </div>
                <div class="mt-8">
                    <h1 class="text-justify"><%-artikel.body%></h1>
                </div>
                <a href="/artikel" class="btn btn-primary mt-8" >Back</a>
            </div>
        </div>
    </div>
</div>

<%- include ('../dashboard_partials/footer') %>