<%- include ('../partials/header') %>
<div class="lg:ml-16 lg:mr-16">
  <%- include ('../partials/message.ejs')%>
</div>
<div class="bg-base-200">
    <div class="lg:ml-16 lg:mr-16">
        <div class="hero max-h-screen bg-base-200">
            <div class="hero-content flex-col lg:flex-row-reverse mb-16 gap-x-40 mt-14">
              <div class="text-center lg:text-left ml-4">
                <img src="images/login.png" alt="">
              </div>
              <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
                <div class="card-body">
                    <form action="/login" method="post">
                        <div class="form-control">
                          <label class="label">
                            <span class="label-text">Email</span>
                          </label>
                          <input type="email" placeholder="email" class="input input-bordered" name="email" required>
                        </div>
                        <div class="form-control">
                          <label class="label">
                            <span class="label-text">Password</span>
                          </label>
                          <input type="password" placeholder="password" class="input input-bordered" name="password" required>
                        </div>
                        <h1 class="text-xs mt-4">Dont Have an account? <a href="/register" class="text-red-600">Register</a> </h1>
                        <div class="form-control mt-6">
                          <button class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
<%- include ('../partials/footer') %>